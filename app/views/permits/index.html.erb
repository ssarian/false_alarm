<p id="notice"><%= notice %></p>

<h1>Listing Permits</h1>

<table>
  <thead>
    <tr>
      <th>Permit Number</th>
      <th>Permit Start Date</th>
      <th>Permit Exp Date</th>
      <th>Permit Status</th>
      <th>Property</th>
      <th>Site Type</th>
      <th>Notes</th>
      <th>Amount Due</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @permits.each do |permit| %>
      <tr>
        <td><%= permit.id %></td>
        <td><%= permit.permitStartDate %></td>
        <td><%= permit.permitExpDate %></td>
        <td><%= permit.fkStatusKey %></td>
        <td><%= permit.fkPropertyKey %></td>
        <td><%= permit.siteType %></td>
        <td><%= permit.note %></td>
        <td><%= permit.amountDue %></td>
        <td><%= link_to 'Show', permit %></td>
        <td><%= link_to 'Edit', edit_permit_path(permit) %></td>
        <td><%= link_to 'Destroy', permit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

