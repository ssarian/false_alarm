<p id="notice"><%= notice %></p>
<%= form_tag(@account_owners_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Accounts" %>
    <%= submit_tag "Search" %>
<% end %>
<% if @posts.present? %>
    <%= render @posts %>
<% else %>
    <p>There are no posts containing the term(s) <%= params[:search] %>.</p>
<% end %>

<h1>Account Owners</h1>

<table>
  <thead>
    <tr>
      <th>Acctnum</th>
      <th>Firstname</th>
      <th>Lastname</th>
      <th>Middlename</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Homephone</th>
      <th>Workphone</th>
      <th>Cellphone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_owners.each do |account_owner| %>
      <tr>
        <td><%= account_owner.acctNum %></td>
        <td><%= account_owner.firstName %></td>
        <td><%= account_owner.lastName %></td>
        <td><%= account_owner.middleName %></td>
        <td><%= account_owner.address %></td>
        <td><%= account_owner.city %></td>
        <td><%= account_owner.state %></td>
        <td><%= account_owner.zip %></td>
        <td><%= account_owner.homePhone %></td>
        <td><%= account_owner.workPhone %></td>
        <td><%= account_owner.cellphone %></td>
        <td><%= account_owner.email %></td>
        <td><%= link_to 'Show', account_owner %></td>
        <td><%= link_to 'Edit', edit_account_owner_path(account_owner) %></td>
        <td><%= link_to 'Destroy', account_owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

